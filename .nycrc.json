{
  "extends": "@istanbuljs/nyc-config-typescript",
  "check-coverage": true,
  "extension": ".ts",
  "exclude": [
    "assets/**/*.spec.ts"
  ],
  "include": [
    "assets/**/*.ts"
  ],
  "reporter": [
    "text",
    "lcov"
  ],
  "report-dir": "./coverage/frontend",
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}
