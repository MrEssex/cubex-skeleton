#!/usr/bin/env php
<?php

use Cubex\Cubex;
use CubexBase\Application\Context\Context;
use MrEssex\CubexCli\CliWrapper;

$loader = require('vendor/autoload.php');

$app = Cubex::withCustomContext(Context::class, __DIR__, $loader);

CliWrapper::initialise($app);
CliWrapper::initialiseAlternativeRoot($app, 'mressex/cubex-translate');

exit($app->cli());
